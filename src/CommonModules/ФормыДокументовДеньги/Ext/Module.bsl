		КонецЕсли;
		
		Если СтруктураКурса.Кратность = 0 Тогда
			СтруктураКурса.Кратность = 1;
		КонецЕсли;
		
		Форма.КурсЦБ 		= СтруктураКурса.Курс;
		Форма.КратностьЦБ = СтруктураКурса.Кратность;
		
