					Описание.Направление = Перечисления.НаправленияЭДО.Входящий;
				Иначе
					Описание.Направление = Перечисления.НаправленияЭДО.Исходящий;
				КонецЕсли;
								
				Описание.Организация            = ПараметрыИсточника.Организация;
				Описание.Контрагент             = ПараметрыИсточника.Контрагент;
				Описание.Договор                = ПараметрыИсточника.ДоговорКонтрагента;
				
			КонецЕсли;
			
		КонецЕсли;
	
	КонецЕсли;
	
	Возврат Описание;
	
