	ПараметрыИсточника.Вставить("СоглашениеЭД");
	ПараметрыИсточника.Вставить("Партнер");
	
	Если ТипЗнч(ИсточникДанныхСсылка) = Тип("СправочникСсылка.НастройкиЭДО")  Тогда
		
		Описание.ТипДокумента = Перечисления.ТипыДокументовЭДО.КаталогТоваров;
		Описание.Направление = Перечисления.НаправленияЭДО.Исходящий;
		Описание.ОбъектУчета = ИсточникДанныхСсылка;
		Описание.Контрагент = ИсточникДанныхСсылка.Контрагент;
		Описание.Организация = ИсточникДанныхСсылка.Организация;
		Описание.Договор = ИсточникДанныхСсылка.ДоговорКонтрагента;
	
	ИначеЕсли ТипЗнч(ИсточникДанныхСсылка) = Тип("СправочникСсылка." + СправочникОрганизации)
		Или ТипЗнч(ИсточникДанныхСсылка) = Тип("СправочникОбъект." + СправочникОрганизации) Тогда
		
		Описание.ТипДокумента = Перечисления.ТипыДокументовЭДО.РеквизитыОрганизации;
		Описание.Организация = ИсточникДанныхСсылка;
		Описание.Направление = Перечисления.НаправленияЭДО.Исходящий;
		
	ИначеЕсли ЭтоОснованиеЭлектронногоДокументаПоЗапросуКоммерческихПредложений Тогда
		
		МодульКоммерческиеПредложенияСлужебный.ЗаполнитьПараметрыЭлектронногоДокументаПоОснованию(ИсточникДанныхСсылка,
			ПараметрыИсточника);
		
		Описание.ТипДокумента = ПараметрыИсточника.Тип;
		Описание.Направление  = ПараметрыИсточника.Направление;
		Описание.Организация  = ПараметрыИсточника.Организация;
		Описание.Контрагент   = ПараметрыИсточника.Контрагент;
		Описание.Договор      = ПараметрыИсточника.ДоговорКонтрагента;
		
	ИначеЕсли ЭтоКоммерческоеПредложение
		И ОбщегоНазначения.ПодсистемаСуществует(КоммерческоеПредложениеКлиенту) Тогда
		
		МодульДокумента = ОбщегоНазначения.ОбщийМодуль("Документы.КоммерческоеПредложениеКлиенту");
		МодульДокумента.ЗаполнитьПараметрыЭлектронногоДокумента(ИсточникДанныхСсылка, ПараметрыИсточника);

		Описание.ТипДокумента = ПараметрыИсточника.Тип;
		Описание.Направление  = ПараметрыИсточника.Направление;
		Описание.Организация  = ПараметрыИсточника.Организация;
		Описание.Контрагент   = ПараметрыИсточника.Контрагент;
		Описание.Договор      = ПараметрыИсточника.ДоговорКонтрагента;

	ИначеЕсли ЭтоЗапросКоммерческогоПредложенияОтКлиента
		И ОбщегоНазначения.ПодсистемаСуществует(ЗапросКоммерческогоПредложенияОтКлиента) Тогда
		
		МодульДокумента = ОбщегоНазначения.ОбщийМодуль("Документы.ЗапросКоммерческогоПредложенияОтКлиента");
		МодульДокумента.ЗаполнитьПараметрыЭлектронногоДокумента(ИсточникДанныхСсылка, ПараметрыИсточника);

		Описание.ТипДокумента = ПараметрыИсточника.Тип;
		Описание.Направление  = ПараметрыИсточника.Направление;
		Описание.Организация  = ПараметрыИсточника.Организация;
		Описание.Контрагент   = ПараметрыИсточника.Контрагент;
		Описание.Договор      = ПараметрыИсточника.ДоговорКонтрагента;

	Иначе		
	
		ОбменСКонтрагентамиПереопределяемый.ЗаполнитьПараметрыЭДПоИсточнику(ИсточникДанных, ПараметрыИсточника);
		
		Описание.ТипДокумента = ТипСкорректированныйПоПрикладнымНастройкам(ПараметрыИсточника,
			ПараметрыИсточника.ФормированиеУниверсальногоДокумента);
		Описание.Направление  = ПараметрыИсточника.Направление;
		Описание.Организация  = ПараметрыИсточника.Организация;
		Описание.Контрагент   = ПараметрыИсточника.Контрагент;
		Описание.Договор      = ПараметрыИсточника.ДоговорКонтрагента;
		
		Если Не ЗначениеЗаполнено(ПараметрыИсточника.Тип) Тогда
			
			ПараметрыИсточника.Вставить("ПрикладнойТипДокумента");
			ПараметрыИсточника.Вставить("Входящий");
			ПараметрыИсточника.Вставить("Организация");
			ПараметрыИсточника.Вставить("Контрагент");
			ПараметрыИсточника.Вставить("ДоговорКонтрагента");
			ПараметрыИсточника.Вставить("Партнер");
			
			ОбменСКонтрагентамиПереопределяемый.ПриОпределенииПараметровПрикладногоЭлектронногоДокументаПоИсточнику(
				ИсточникДанных, ПараметрыИсточника);
			
			Если ЗначениеЗаполнено(ПараметрыИсточника.ПрикладнойТипДокумента) Тогда
				
				Описание.ТипДокумента           = Перечисления.ТипыДокументовЭДО.Прикладной;
				Описание.ПрикладнойТипДокумента = ПараметрыИсточника.ПрикладнойТипДокумента;
				
