		|ПОМЕСТИТЬ ДанныеОбъектовУчета
		|ИЗ
		|	&ДанныеОбъектовУчета КАК ДанныеОбъектовУчета";
		
	ОтборВидовДокументовВнутреннегоЭДО = ЭлектронныеДокументыЭДО.НовыйОтборВидовДокументов();
	ОтборВидовДокументовВнутреннегоЭДО.ТипДокумента = "ЗНАЧЕНИЕ(Перечисление.ТипыДокументовЭДО.Внутренний)";
	ОтборВидовДокументовВнутреннегоЭДО.ИдентификаторОбъектаУчета = "ВЫБРАТЬ ИдентификаторОбъектаУчета ИЗ ДанныеОбъектовУчета";

	ИмяТаблицыВидовДокументовВнутреннегоЭДО = "ВидыВнутреннегоЭДО";
	ТекстЗапросаВидовДокументовВнутреннегоЭДО = ЭлектронныеДокументыЭДО.ЗапросВидовДокументов(
		ИмяТаблицыВидовДокументовВнутреннегоЭДО, ОтборВидовДокументовВнутреннегоЭДО).Текст;

	ТекстЗапросаДанныхАктуальности = 
		"ВЫБРАТЬ
		|	ДанныеОбъектовУчета.ОбъектУчета КАК ОбъектУчета,
		|	ДанныеОбъектовУчета.Организация КАК Организация,
		|	ВидыДокументовЭДО.Ссылка КАК ВидДокумента,
		|	АктуальныеДокументыЭДО.ЭлектронныйДокумент КАК ЭлектронныйДокумент
		|ПОМЕСТИТЬ ДанныеАктуальности
		|ИЗ
		|	ДанныеОбъектовУчета КАК ДанныеОбъектовУчета
		|		ЛЕВОЕ СОЕДИНЕНИЕ ВидыВнутреннегоЭДО КАК ВидыДокументовЭДО
		|		ПО ДанныеОбъектовУчета.ИдентификаторОбъектаУчета = ВидыДокументовЭДО.ИдентификаторОбъектаУчета
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.АктуальныеДокументыЭДО КАК АктуальныеДокументыЭДО
		|		ПО ДанныеОбъектовУчета.ОбъектУчета = АктуальныеДокументыЭДО.ОбъектУчета
		|		И ВидыДокументовЭДО.Ссылка = АктуальныеДокументыЭДО.ВидЭлектронногоДокумента";
	
	ОтборНастроекОтправкиВнутреннегоЭДО = НастройкиЭДО.НовыйОтборНастроекВнутреннегоЭДО();
	ОтборНастроекОтправкиВнутреннегоЭДО.Организация = "ВЫБРАТЬ Организация ИЗ ДанныеАктуальности";
	ОтборНастроекОтправкиВнутреннегоЭДО.ВидДокумента = "ВЫБРАТЬ ВидДокумента ИЗ ДанныеАктуальности";
	
	ИмяТаблицыНастроекВнутреннегоЭДО = "НастройкиВнутреннегоЭДО";
	ТекстЗапросаНастроекВнутреннегоЭДО = НастройкиЭДО.ЗапросНастроекВнутреннегоЭДО(
		ИмяТаблицыНастроекВнутреннегоЭДО, ОтборНастроекОтправкиВнутреннегоЭДО).Текст;

	ИмяТаблицыСостоянийЭлектронныхДокументов = "СостоянияЭлектронныхДокументов";
	УсловиеВыбораСостоянийЭлектронныхДокументов = " ВЫБРАТЬ ДанныеАктуальности.ЭлектронныйДокумент ИЗ ДанныеАктуальности";

	ТекстСостоянийЭлектронныхДокументов = ЭлектронныеДокументыЭДО.ЗапросСостоянийДокументов(
		ИмяТаблицыСостоянийЭлектронныхДокументов, УсловиеВыбораСостоянийЭлектронныхДокументов).Текст;

	ТекстЗапросаИтоговыхДанных = 
		"ВЫБРАТЬ
		|	КОЛИЧЕСТВО(ДанныеАктуальности.ОбъектУчета) КАК КоличествоДокументов,
		|	ЕСТЬNULL(СостоянияЭДО.Состояние, ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.НеСформирован)) КАК СостояниеЭД,
		|	ВЫБОР
		|		КОГДА ЕСТЬNULL(СостоянияЭДО.Состояние,
		|			ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.НеСформирован)) = ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.НеСформирован)
		|		ИЛИ ЕСТЬNULL(СостоянияЭДО.Состояние,
		|			ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.НеСформирован)) = ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.ЗакрытПринудительно)
		|			ТОГДА 0
		|		КОГДА СостоянияЭДО.Состояние = ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.Аннулирован)
		|		ИЛИ СостоянияЭДО.Состояние = ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.ОбменЗавершен)
		|			ТОГДА 2
		|		ИНАЧЕ 1
		|	КОНЕЦ КАК ПриоритетСостояниеЭДО
		|ИЗ
		|	ДанныеАктуальности КАК ДанныеАктуальности
		|		ЛЕВОЕ СОЕДИНЕНИЕ НастройкиВнутреннегоЭДО КАК НастройкиВнутреннегоЭДО
		|		ПО ДанныеАктуальности.ВидДокумента = НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента
		|		И ДанныеАктуальности.Организация = НастройкиВнутреннегоЭДО.Организация
		|		ЛЕВОЕ СОЕДИНЕНИЕ СостоянияЭлектронныхДокументов КАК СостоянияЭДО
		|		ПО ДанныеАктуальности.ЭлектронныйДокумент = СостоянияЭДО.Ссылка
		|ГДЕ
		|	(ЕСТЬNULL(НастройкиВнутреннегоЭДО.Формировать, ЛОЖЬ)
		|	ИЛИ
		|	НЕ ДанныеАктуальности.ЭлектронныйДокумент ЕСТЬ NULL)
		|	И &УсловиеПоВиду
		|СГРУППИРОВАТЬ ПО
		|	ВЫБОР
		|		КОГДА ЕСТЬNULL(СостоянияЭДО.Состояние,
		|			ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.НеСформирован)) = ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.НеСформирован)
		|		ИЛИ ЕСТЬNULL(СостоянияЭДО.Состояние,
		|			ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.НеСформирован)) = ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.ЗакрытПринудительно)
		|			ТОГДА 0
		|		КОГДА СостоянияЭДО.Состояние = ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.Аннулирован)
		|		ИЛИ СостоянияЭДО.Состояние = ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.ОбменЗавершен)
		|			ТОГДА 2
		|		ИНАЧЕ 1
		|	КОНЕЦ,
		|	ЕСТЬNULL(СостоянияЭДО.Состояние, ЗНАЧЕНИЕ(Перечисление.СостоянияДокументовЭДО.НеСформирован))
		|УПОРЯДОЧИТЬ ПО
		|	ПриоритетСостояниеЭДО";
	
	Запросы = Новый Массив;
	Запросы.Добавить(ТекстЗапросаДанныхОбъектовУчета);
	Запросы.Добавить(ТекстЗапросаВидовДокументовВнутреннегоЭДО);
	Запросы.Добавить(ТекстЗапросаДанныхАктуальности);
	Запросы.Добавить(ТекстЗапросаНастроекВнутреннегоЭДО);
	Запросы.Добавить(ТекстСостоянийЭлектронныхДокументов);
	Запросы.Добавить(ТекстЗапросаИтоговыхДанных);
	
	ИтоговыйЗапрос = СтрСоединить(Запросы, ОбщегоНазначения.РазделительПакетаЗапросов());
		
	Запрос.Текст = ИтоговыйЗапрос;
			
	УсловиеПоВиду = "ИСТИНА";	
	
	Если ЗначениеЗаполнено(ВидДокумента) Тогда
		УсловиеПоВиду = "ДанныеАктуальности.ВидДокумента = &ВидДокумента";
		Запрос.Параметры.Вставить("ВидДокумента", ВидДокумента);	
	КонецЕсли;	
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&УсловиеПоВиду", УсловиеПоВиду);
	
	Запрос.Параметры.Вставить("ДанныеОбъектовУчета", ДанныеОбъектовУчета);
	
	УстановитьПривилегированныйРежим(Истина);
	РезультатЗапроса = Запрос.Выполнить().Выгрузить();
	УстановитьПривилегированныйРежим(Ложь);
	
	ПредставлениеСтатуса = "";
	
	Если ЗначениеЗаполнено(РезультатЗапроса) Тогда 
		
		МинимальныйПриоритет = РезультатЗапроса[0].ПриоритетСостояниеЭДО;

		Если РезультатЗапроса.Количество() = 1 Тогда 
			
			ПредставлениеСтатуса = Строка(РезультатЗапроса[0].СостояниеЭД);
			Если РезультатЗапроса[0].КоличествоДокументов > 1 Тогда
				ШаблонКоличестваДокументов = "%1 (%2)";
				ПредставлениеСтатуса = СтрШаблон(ШаблонКоличестваДокументов, ПредставлениеСтатуса, РезультатЗапроса[0].КоличествоДокументов);  
			КонецЕсли;
			
		Иначе
			
			РезультатЗапроса.Свернуть("ПриоритетСостояниеЭДО","КоличествоДокументов");
			
			КоличествоДокументовВМинимальномСостоянии = РезультатЗапроса[0].КоличествоДокументов;
			
			Состояние = ПриоритетыСостояний[МинимальныйПриоритет]; 
			ВсегоВозможныхДокументов = РезультатЗапроса.Итог("КоличествоДокументов");
			
			Если РезультатЗапроса.Количество() = 1 Тогда
				Шаблон = "%1 (%2)";
				ПредставлениеСтатуса = СтрШаблон(Шаблон, Состояние, ВсегоВозможныхДокументов);  
			Иначе
				Шаблон = НСтр("ru = '%1 (%2/%3)'");
				ПредставлениеСтатуса = СтрШаблон(Шаблон, Состояние, КоличествоДокументовВМинимальномСостоянии, ВсегоВозможныхДокументов); 
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЕсли;

	Возврат ПредставлениеСтатуса;
	
КонецФункции

