		НоваяСтрока.СтавкаНДС = ПолучитьСтавкуНДС(ТабЧасть.Товар);
		РассчитатьСуммыВСтрокеТабличнойЧасти(НовыйОбъект, НоваяСтрока);
	КонецЦикла;
	
	НовыйОбъект.Комментарий = Выборка.Комментарий;
	
