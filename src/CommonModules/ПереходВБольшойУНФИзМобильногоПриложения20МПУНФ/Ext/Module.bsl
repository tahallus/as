			НовыйОбъект.СпособПополнения = Перечисления.СпособыПополненияЗапасов.Закупка;
			НовыйОбъект.ВидСтавкиНДС = НайтиСтавкуНДС(Выборка.СтавкаНДС);
			
		КонецЕсли;
		
