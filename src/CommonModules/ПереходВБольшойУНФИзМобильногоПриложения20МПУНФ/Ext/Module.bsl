		НомерЧекаККМ = 0;
	КонецЕсли;
	
	НовыйОбъект.НомерЧекаККМ = НомерЧекаККМ;
	
	СтатусЧекаККМ = ?(НовыйОбъект.НомерЧекаККМ = 0, Перечисления.СтатусыЧековККМ.ЧекНеПробит, Перечисления.СтатусыЧековККМ.Пробит);
