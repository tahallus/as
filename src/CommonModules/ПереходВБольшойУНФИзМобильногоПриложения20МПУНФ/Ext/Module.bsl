	ВалютаРасчетов = ТаблицаВалют.Найти(ДоговорПоУмолчанию.ВалютаРасчетов, "Валюта");
	ВалютаДенежныхСредств = ТаблицаВалют.Найти(НовыйОбъект.ВалютаДенежныхСредств, "Валюта");
	
