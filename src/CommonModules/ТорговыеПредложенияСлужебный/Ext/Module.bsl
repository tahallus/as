	КонецЕсли;
	
	Если СписокЗначений.Количество() > 1 Тогда
		
		НоваяСтрока = Таблица.Добавить();
		НоваяСтрока.СписокВыбора = СписокЗначений;
		
	КонецЕсли;
	
	Возврат НоваяСтрока;
	
