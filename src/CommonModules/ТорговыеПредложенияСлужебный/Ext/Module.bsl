		ЗапросСервиса.Метод = "PUT";
		ЗапросСервиса.Аутентификация = Истина;
		ЗапросСервиса.Контент = "application/vnd.1cbn.v1+json";
		ЗапросСервиса.Данные = "{""outOfSale"": true}";
