	Если Параметры.Свойство("ИскатьПоШтрихкоду") Тогда	
		ИскатьПоШтрихкоду = Параметры.ИскатьПоШтрихкоду;
	КонецЕсли;
	Если Параметры.Свойство("ИскатьПоАртикулу") Тогда	
		ИскатьПоАртикулу = Параметры.ИскатьПоАртикулу;
	КонецЕсли;
	Если Параметры.Свойство("ИскатьПоНаименованию") Тогда	
		ИскатьПоНаименованию = Параметры.ИскатьПоНаименованию;
