	Если Параметры.Свойство("ИскатьПоНаименованиюЛевойЧасти") Тогда	
		ИскатьПоНаименованиюЛевойЧасти = Параметры.ИскатьПоНаименованиюЛевойЧасти;
	КонецЕсли;
	Если Параметры.Свойство("ИскатьПоНаименованиюПолному") Тогда	
		ИскатьПоНаименованиюПолному	= Параметры.ИскатьПоНаименованиюПолному;
	КонецЕсли;
	Если Параметры.Свойство("ИскатьПоНаименованиюПолномуЛевойЧасти") Тогда	
		ИскатьПоНаименованиюПолномуЛевойЧасти = Параметры.ИскатьПоНаименованиюПолномуЛевойЧасти;
	КонецЕсли;
	Если Параметры.Свойство("ВариантПоиска") Тогда	
		ВариантПоиска = Параметры.ВариантПоиска;
	КонецЕсли;
	
КонецПроцедуры

