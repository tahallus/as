//  Ключ - УникальныйИдентификатор - идентификатор для получения адреса временного хранилища.
//         В хранилище помещаются данные, которые нельзя использовать на клиенте
//
// Возвращаемое значение:
//  Структура - данные для заполнения нового уведомления
//
Функция ДанныеЗаполненияУведомленияОбУменьшенииНалогаНаСтраховыеВзносы(Патент, Ключ) Экспорт
	
	ДанныеУведомления = Новый Структура;  
	
	ТитульныйЛист = Новый Структура("ГодДействПат", 0);
	ТитульныйЛист.ГодДействПат = Формат(Год(Объект.СобытиеКалендаря.ДатаНачалаДокументов), "ЧГ=");
	
	ДанныеУведомления.Вставить("Титульная", ТитульныйЛист);  
	
	Патенты = Новый Массив;    
	Патенты.Добавить(Патент);
	ДанныеУведомления.Вставить("Патенты", Новый ХранилищеЗначения(Патенты));
	ДанныеУведомления.Вставить("ОбщаяСуммаРасходов", ВсегоРасходыСтраховыеВзносы);
	
	ИспользуетсяТрудНаемныхРаботников = Объект.Организация.ИПИспользуетТрудНаемныхРаботников;
	
	ЛистА = НовыеДанныеЛистаА_УведомлениеУменьшениеНалогаНаСтраховыеВзносы_Форма2021();
	ВсегоУменьшено = 0; 
	РеквизитыПатента = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(Патент, "НомерПатента, ДатаНачала, ДатаОкончания, СуммаПервогоПлатежа, СуммаВторогоПлатежа");
	ДанныеЛистаА = ЛистА.Добавить();
	ДанныеЛистаА.НомерПат = Патент.НомерПатента;
	ДанныеЛистаА.ДатаНачПат = Патент.ДатаНачала;
	ДанныеЛистаА.ДатаКонПат = Патент.ДатаОкончания;
	ДанныеЛистаА.ПрНП = ?(ИспользуетсяТрудНаемныхРаботников, "1", "2");
	
	СуммаПатента = РеквизитыПатента.СуммаПервогоПлатежа + РеквизитыПатента.СуммаВторогоПлатежа;
	ДанныеЛистаА.СумНалПатУм = СуммаПатента;
	ДанныеЛистаА.СумСВУмНал = ОстатокРасходыСтраховыеВзносы;
	
	СписокУведомлений = 
	РегистрыСведений.УменьшениеНалогаПСНнаСтраховыеВзносы.СведенияУменьшениеНалогаЗаГод(Объект.Организация, Объект.СобытиеКалендаря.ДатаНачалаДокументов, Патент); 
	
	СуммаУменьшеноРанее = 0;
	Если Уведомления <> Неопределено Тогда
		Для Каждого СтрокаУведомление Из Уведомления Цикл
			СтатусУведомления = ИнтерфейсыВзаимодействияБРО.СостояниеДокумента(СтрокаУведомление.Ссылка);
			Если СтатусУведомления.Сдано Тогда
				СуммаУменьшеноРанее = СуммаУменьшеноРанее + СтрокаУведомление.Сумма;
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	ДанныеЛистаА.СумСВУменУчт = СуммаУменьшеноРанее;
	ВсегоУменьшено = ВсегоУменьшено + СуммаУменьшеноРанее; 
	ДанныеУведомления.Вставить("ЛистА", ПоместитьВоВременноеХранилище(ЛистА, Ключ));
	
	ЛистБ = НовыеДанныеЛистаБ_УведомлениеУменьшениеНалогаНаСтраховыеВзносы_Форма2021();
	ЛистБ.ОбщСумУплСВ = ВсегоРасходыСтраховыеВзносы;
	ЛистБ.ОбщСумСВУмен = ОстатокРасходыСтраховыеВзносы;
	ЛистБ.ОбщСумСВУменУчт = ВсегоУменьшено;
	ЛистБ.СумСВОст = ВсегоРасходыСтраховыеВзносы - ОстатокРасходыСтраховыеВзносы - ВсегоУменьшено;
	
	ДанныеУведомления.Вставить("ЛистБ", ЛистБ); 
	
	ДанныеУведомления.Вставить("ИмяПомощника", "ОбработкиНалоговИОтчетности");
	
	Возврат ДанныеУведомления;
	
КонецФункции  

