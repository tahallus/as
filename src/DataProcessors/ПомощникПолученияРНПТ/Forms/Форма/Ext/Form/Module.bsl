				Представление = Представление + "/" + КоличествоСтрокой;
				
			КонецЕсли;
			
			Представление = Представление + ")";
			
			Элементы[Раздел.Имя].Заголовок = Представление;
			
		КонецЕсли;
			
	КонецЦикла;
	
