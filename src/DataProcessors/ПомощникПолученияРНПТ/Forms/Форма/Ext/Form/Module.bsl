	ЭлементыКоманд.Вставить("ЗаписатьРНПТ", Элементы.КомандаЗаписатьРНПТ);
	ЭлементыКоманд.Вставить("ОткрытьЖурналУведомлений", Элементы.КомандаОткрытьЖурналУведомлений);
