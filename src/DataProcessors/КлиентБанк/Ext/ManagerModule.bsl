				СтрокаДокумента.ДокументНайден = СтрокаДокумента.ДокументНайден + НСтр("ru = '. И еще %КоличествоДок% док.'");
				СтрокаДокумента.ДокументНайден = СтрЗаменить(СтрокаДокумента.ДокументНайден, "%КоличествоДок%", КоличествоДок-1);
