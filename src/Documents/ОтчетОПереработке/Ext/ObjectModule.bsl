		СтруктураЗаполнения.Вставить("Сумма", 0);
		СтруктураЗаполнения.Вставить("СтавкаНДС", НоваяСтрока.СтавкаНДС);
		СтруктураЗаполнения.Вставить("СуммаНДС", 0);
