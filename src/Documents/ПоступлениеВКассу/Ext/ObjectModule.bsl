			КонецЕсли;
			
		Иначе
			ТаблицаДанных = РезультатЗапроса.Выгрузить();
		КонецЕсли;
		
		Если НЕ РезультатЗапроса.Пустой() Тогда
			
			Выборка = РезультатЗапроса.Выбрать();
			Выборка.Следующий();
			
			ПоложениеСклада = Выборка.ПоложениеСклада;
			
			// Заполним реквизиты шапки.
