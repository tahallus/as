	ТаблицаОстатков.Индексы.Добавить("Номенклатура,Характеристика");
	
	Запасы.Очистить();
	Выборка = МассивРезультатов[1].Выбрать();
	Выборка.Следующий();
	Если ТаблицаОстатков.Количество() > 0 Тогда
		ТаблицаЗапасы = МассивРезультатов[1].Выгрузить();
		ЗаполнитьЗапасыПоЗаказПокупателяИсходноеМесто(ТаблицаЗапасы, ТаблицаОстатков);
		
