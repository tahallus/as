			ТаблицаМатериалы = МассивРезультатов[2].Выгрузить();
			ЗаполнитьЗапасыПоЗаказПокупателяИсходноеМесто(ТаблицаМатериалы, ТаблицаОстатков);
		КонецЕсли;
		
		Для каждого СтрокаОстатков Из ТаблицаОстатков Цикл
			НоваяСтрока = Запасы.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаОстатков);
