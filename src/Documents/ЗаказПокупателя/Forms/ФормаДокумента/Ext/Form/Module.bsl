			Строка.Объем = Строка.ОбъемЕдиницыТовара * Строка.Количество;
			
			РассчитатьСуммуВСтрокеТабличнойЧасти(, Строка);
			
			НоменклатураВДокументахКлиент.КонтрольЗначенияРезерваВТекущейСтроке(Строка);
			
