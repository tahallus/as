&НаСервере
Процедура _ОбновитьОтображение()
	
	Элементы._Клиент.Видимость = Ложь;
	
	Если ЗначениеЗаполнено(Объект._Партнер) Тогда
		Элементы._Партнер.Заголовок = ?(Объект._Партнер.Агентство, "Агентство", "Клиент");
		Если Объект._Партнер.Агентство Тогда
			Элементы._Клиент.Видимость = Истина;
		Иначе
			Элементы._Клиент.Видимость = Ложь;
			Если Объект._Клиент <> Объект._Партнер Тогда
				Объект._Клиент = Объект._Партнер;
			КонецЕсли;
		КонецЕсли;			
	КонецЕсли;
	
	Элементы._Журнал.Видимость = Ложь;
	Элементы._Мероприятие.Видимость = Ложь;
	Элементы._СтатусПартнераНаМероприятии.Видимость = Ложь;
	Элементы._Журнал.Видимость = Ложь;
	
	Если ЗначениеЗаполнено(Объект._ВидДокумента) Тогда
		Если Объект._ВидДокумента = Перечисления._ВидыДокументов.Диджитал Тогда
		
		ИначеЕсли Объект._ВидДокумента = Перечисления._ВидыДокументов.Принт Тогда
			Элементы._Журнал.Видимость = Истина;
		ИначеЕсли Объект._ВидДокумента = Перечисления._ВидыДокументов.Мероприятия Тогда
			Элементы._Мероприятие.Видимость = Истина;
			Элементы._СтатусПартнераНаМероприятии.Видимость = Истина;
		ИначеЕсли Объект._ВидДокумента = Перечисления._ВидыДокументов.Журнал Тогда
			Элементы._Журнал.Видимость = Истина;
		Иначе
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

