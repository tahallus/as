	Элементы.Список.ТекущаяСтрока);
	
КонецПроцедуры

&НаКлиенте
Процедура ОткрытьОтчетПоКредитам(Команда)
	
	ПараметрыОткрытия = Новый Структура("КлючВарианта, СформироватьПриОткрытии", "КредитыПолученные", Истина);
	ТекущиеДанные = Элементы.Список.ТекущиеДанные;
	Если ТекущиеДанные <> Неопределено И ТекущиеДанные.ВидДоговора = ВидДоговораКредитПолученный Тогда
		ПараметрыОткрытия.Вставить("Отбор", Новый Структура("Контрагент", ТекущиеДанные.Контрагент));
	КонецЕсли;
	ОткрытьФорму("Отчет.РасчетыПоКредитамИЗаймам.Форма", ПараметрыОткрытия);
	
КонецПроцедуры

&НаКлиенте
Процедура ОткрытьОтчетПоЗаймам(Команда)
	
	ПараметрыОткрытия = Новый Структура("КлючВарианта, СформироватьПриОткрытии", "ЗаймыСотрудникам", Истина);
	ТекущиеДанные = Элементы.Список.ТекущиеДанные;
	Если ТекущиеДанные <> Неопределено И ТекущиеДанные.ВидДоговора <> ВидДоговораКредитПолученный Тогда
		ПараметрыОткрытия.Вставить("Отбор", Новый Структура("Сотрудник", ТекущиеДанные.Сотрудник));
	КонецЕсли;
	ОткрытьФорму("Отчет.РасчетыПоКредитамИЗаймам.Форма", ПараметрыОткрытия);
	
КонецПроцедуры

